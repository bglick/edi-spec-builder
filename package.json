{
  "name": "edi-spec-builder",
  "version": "1.0.0",
  "description": "ANSI X12 EDI Specification Builder - Create, edit, and export EDI implementation specifications",
  "main": "dist/main/main/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode production",
    "build": "npm run build:main && npm run build:renderer",
    "start:renderer": "webpack serve --mode development",
    "start:electron": "wait-on http://localhost:3003 && electron .",
    "start": "concurrently \"npm run start:renderer\" \"npm run start:electron\"",
    "dev": "npm run build:main && npm run start",
    "package": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "edi",
    "ansi-x12",
    "specification",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "pdfkit": "^0.17.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "html-webpack-plugin": "^5.6.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "build": {
    "appId": "com.edispecbuilder.app",
    "productName": "EDI Specification Builder",
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
